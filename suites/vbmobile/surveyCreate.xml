<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Mobile Site Survey End-to-End Test" verbose="1">
	<listeners>
    	<listener class-name="com.kone.framework.listener.TestNGListener" />
  	</listeners>
  	
  	<test name="Create Survey in Salesforce LIO_FULL, then Answer in VbMobile" group-by-instances="true">
        <parameter name="mobileMenutoSelect" value="Survey Manager_1" />
        <parameter name="websurveytype" value="LIO" />
        <parameter name="websiteselectplannedtype" value="FRB Full" />
        <groups>
            <dependencies>
                <group name="vbmobie_login" depends-on="login_salesforce" />
                <group name="vbmobie_survey" depends-on="vbmobie_login" />
            </dependencies>
		 </groups>
        <classes>
            <class name="com.kone.app.tests.factories.salesforce.SalesforceAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileSurveyTestFactory" />
        </classes>
     </test>
     <test name="Create Survey in Salesforce LIO_Budget, then Answer in VbMobile" group-by-instances="true">
        <parameter name="mobileMenutoSelect" value="Survey Manager_1" />
        <parameter name="websurveytype" value="LIO" />
        <parameter name="websiteselectplannedtype" value="FRB Budget" />
        <groups>
            <dependencies>
                <group name="vbmobie_login" depends-on="login_salesforce" />
                <group name="vbmobie_survey" depends-on="vbmobie_login" />
            </dependencies>
		 </groups>
        <classes>
            <class name="com.kone.app.tests.factories.salesforce.SalesforceAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileSurveyTestFactory" />
        </classes>
     </test>

  	<test name="Answer in VbMobile and Link the Survey in Mobile SiteSurvey Run:1" group-by-instances="true">
        <parameter name="mobileMenutoSelect" value="Survey Manager" />
        <groups>
            <dependencies>
                <group name="vbmobie_surveytolink" depends-on="vbmobie_login"/>
                <group name="linkSurveytoSalesforce" depends-on="vbmobie_surveytolink"/>
                <group name="linkSurveytoSitefromSalesforce" depends-on="linkSurveytoSalesforce"/>
            </dependencies>
		 </groups>
        <classes>
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileSurveyLinktoOpportunityTestFactory" />
			<class name="com.kone.app.tests.factories.salesforce.SalesforceSurveytoLinkOpportunityTestFactory" />
        </classes>  
  </test> <!-- Test -->
  
    <test name="Answer in VbMobile and Link the Survey in Mobile SiteSurvey Run:2" group-by-instances="true">
        <parameter name="mobileMenutoSelect" value="Survey Manager" />
        <groups>
            <dependencies>
                <group name="vbmobie_surveytolink" depends-on="vbmobie_login"/>
                <group name="linkSurveytoSalesforce" depends-on="vbmobie_surveytolink"/>
                <group name="linkSurveytoSitefromSalesforce" depends-on="linkSurveytoSalesforce"/>
            </dependencies>
		 </groups>
        <classes>
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileAuthenticationTestFactory" />
            <class name="com.kone.app.tests.factories.vbmobile.VbmobileSurveyLinktoOpportunityTestFactory" />
			<class name="com.kone.app.tests.factories.salesforce.SalesforceSurveytoLinkOpportunityTestFactory" />
        </classes>  
  </test>
</suite>
